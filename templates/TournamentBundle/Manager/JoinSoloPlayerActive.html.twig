      <header class="full">
        <div class="step pull-left">
            {{ counter }}
        </div>
        <div class="title pull-left">Coacher un joueur inscrit</div>
        <br class="clear">
      </header>
      <div class="text">
        <p>{{ error }}</p>
      </div>
{% else %}
    <div class="frame frame-active">
      <header class="full">
        <div class="step pull-left">
            {{ counter }}
        </div>
        <div class="title pull-left">Coacher un joueur inscrit</div>
        <br class="clear">
      </header>
{% endif %}

